{
  "name": "appium-kit-vscode",
  "displayName": "Appium Kit",
  "description": "The only tool you need to manage appium ecosystem",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.76.0"
  },
  "keywords": [
    "appium",
    "mobile",
    "xcuitest",
    "espresso",
    "android",
    "ios",
    "testing",
    "automation"
  ],
  "homepage": "https://github.com/sudharsan-selvaraj/appium-kit-vscode/",
  "bugs": {
    "url": "https://github.com/sudharsan-selvaraj/appium-kit-vscode//issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sudharsan-selvaraj/appium-kit-vscode/"
  },
  "author": {
    "name": "Sudharsan Selvaraj",
    "email": "sudharsanselvaraj.c@gmail.com"
  },
  "categories": [
    "Other"
  ],
  "publisher": "sudharsan-selvaraj",
  "activationevents": [
    "workspaceContains:**/*{appiumrc.json,appiumrc.yaml,appiumrc.yml,appiumrc,appium.conf.json,.appiumrc}"
  ],
  "main": "./dist/extension.js",
  "icon": "https://github.com/sudharsan-selvaraj/appium-kit-vscode/blob/main/media/appium-logo.png",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "appium-activitybar",
          "title": "Appium",
          "icon": "media/logo.svg"
        }
      ],
      "panel": [
        {
          "id": "appium-panel",
          "title": "Appium ToolBox",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "appium.view.configFiles",
          "type": "tree",
          "name": "Appium Config Files",
          "when": "appium.configured == true",
          "visibility": "visible"
        },
        {
          "id": "appium.view.server",
          "type": "tree",
          "name": "Appium Servers",
          "when": "appium.configured == true",
          "visibility": "visible"
        }
      ],
      "appium-panel": [],
      "appium-activitybar": [
        {
          "id": "appium.view.environment",
          "type": "webview",
          "name": "Environment",
          "when": "appium.configured == true",
          "initialSize": 1
        },
        {
          "id": "appium.view.extensions",
          "type": "webview",
          "name": "Extensions",
          "when": "appium.configured == true",
          "initialSize": 3
        },
        {
          "id": "appium.view.configure",
          "type": "webview",
          "name": "Configure",
          "when": "appium.configured == false"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "appium.view.configFiles",
        "contents": "No config files present in the workspace."
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "appium.environment.refresh",
          "when": "view == appium.view.environment",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "appium.config.create-new",
          "when": "view == appium.view.configFiles && viewItem == config-directory",
          "group": "inline"
        },
        {
          "command": "appium.config.delete",
          "when": "view == appium.view.configFiles && viewItem =~ /config-file/",
          "group": "inline"
        },
        {
          "command": "appium.server.start",
          "when": "view == appium.view.configFiles && viewItem == config-file-valid",
          "group": "inline"
        }
      ]
    },
    "commands": [
      {
        "command": "appium.environment.refresh",
        "title": "Refresh appium environment",
        "category": "Appium",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "appium.server.start",
        "category": "Appium",
        "title": "Start appium server",
        "icon": "$(debug-start)"
      },
      {
        "command": "appium.config.create-new",
        "category": "Appium",
        "title": "Create new appium config",
        "icon": "$(new-file)"
      },
      {
        "command": "appium.config.delete",
        "category": "Appium",
        "title": "Delete config file",
        "icon": "$(trash)"
      }
    ],
    "configuration": {
      "title": "Appium",
      "properties": {
        "appium.appiumPath": {
          "type": "string",
          "description": "Path for the appium executable"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "echo $ANDROID_HOME && webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/common-tags": "^1.8.1",
    "@types/glob": "^8.1.0",
    "@types/handlebars": "^4.1.0",
    "@types/lodash": "^4.14.191",
    "@types/lokijs": "^1.5.7",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/semver": "^7.3.13",
    "@types/teen_process": "^2.0.0",
    "@types/uuid": "^9.0.1",
    "@types/vscode": "^1.76.0",
    "@types/which": "^2.0.2",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "yml": "^1.0.0"
  },
  "dependencies": {
    "@appium/base-driver": "^9.3.4",
    "@appium/support": "^3.1.8",
    "@bendera/vscode-webview-elements": "^0.12.0",
    "@types/get-port": "^4.2.0",
    "@types/http-proxy": "^1.17.10",
    "@vscode/codicons": "^0.0.32",
    "axios": "^1.3.4",
    "body-parser": "^1.20.2",
    "common-tags": "^1.8.2",
    "eventemitter2": "^6.4.9",
    "execa": "^7.1.1",
    "express": "^4.18.2",
    "get-port": "^6.1.2",
    "handlebars": "^4.7.7",
    "http-proxy": "^1.18.1",
    "http-proxy-middleware": "^2.0.6",
    "lilconfig": "^2.1.0",
    "lodash": "^4.17.21",
    "lokijs": "^1.5.12",
    "path-match": "^1.2.4",
    "semver": "^7.3.8",
    "teen_process": "^2.0.2",
    "uuid": "^9.0.0",
    "which": "^3.0.0",
    "yaml": "^2.2.1",
    "yargs": "^17.7.1"
  }
}
